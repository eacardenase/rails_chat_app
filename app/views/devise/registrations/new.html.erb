<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10">
  <section class="flex flex-col text-center items-center gap-1">
    <h1 class="font-bold text-white text-4xl my-4">Chat App - RoR 7</h1>
    <p class="text-center font-semibold text-white">
      This is a chat app built with Ruby on Rails
    </p>
  </section>

  <section class="flex flex-col items-center">
    <h2 class="text-white font-bold text-2xl mb-5">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "flex flex-col") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :email, class: "text-white font-semibold text-sm w-24" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-sm font-medium rounded w-full" %>
      </div>

      <div class="flex flex-col my-5 justify-center">
        <div class="flex gap-1 items-center w-96">
          <%= f.label :password, class: "text-white font-semibold text-sm w-24" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "text-sm font-medium rounded w-full" %>
        </div>

        <div class="flex w-full items-center justify-end">
          <% if @minimum_password_length %>
          <em class="text-white font-semibold text-sm">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

      </div>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password_confirmation, class: "text-white font-semibold text-sm w-24" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-sm font-medium rounded w-full" %>
      </div>

      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Sign up", class: "bg-green-700 rounded py-2 px-3 text-white font-semibold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</main>
